<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:deep="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deep.com.myapplication.callable.CallableActivity">


    <Button
        android:id="@+id/custom_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击改变Text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.289"/>

    <Button
        android:id="@+id/custom_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invalidate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14"/>
    <Button
        android:id="@+id/custom_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="requestLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.429"/>

    <Button
        android:id="@+id/custom_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034"/>
    <deep.com.myapplication.customview.DeepView
        android:id="@+id/custom1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="aaaa"
        android:textSize="18sp"
        deep:deep_icon="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.613"/>
</android.support.constraint.ConstraintLayout>
